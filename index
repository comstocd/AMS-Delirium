<script>
function toggleSection(header){
var body=header.nextElementSibling;
var toggle=header.querySelector('.toggle');
if(body.classList.contains('active')){
body.classList.remove('active');
toggle.textContent='+';
}else{
body.classList.add('active');
toggle.textContent='−';
}
}

function toggleCheck(item){
var checkbox=item.querySelector('input[type="checkbox"]');
checkbox.checked=!checkbox.checked;
if(checkbox.id.startsWith('cam')){
calculateCAM();
}
}

function calculateCAM(){
var cam1=document.getElementById('cam1').checked;
var cam2=document.getElementById('cam2').checked;
var cam3=document.getElementById('cam3').checked;
var cam4=document.getElementById('cam4').checked;
var resultDiv=document.getElementById('cam-result');
var resultText=document.getElementById('cam-result-text');
var resultDesc=document.getElementById('cam-result-desc');
var positive=cam1&&cam2&&(cam3||cam4);
resultDiv.style.display='block';
if(positive){
resultDiv.classList.add('positive');
resultText.textContent='CAM-ICU POSITIVE';
resultDesc.textContent='Delirium is present. Initiate workup for reversible causes and implement non-pharmacologic interventions.';
}else{
resultDiv.classList.remove('positive');
resultText.textContent='CAM-ICU NEGATIVE';
resultDesc.textContent='Criteria not met for delirium diagnosis by CAM-ICU. Consider alternative diagnoses if clinical suspicion remains high.';
}
}

function calculate4AT(){
var alertness=parseInt(document.getElementById('alertness').value);
var amt4=parseInt(document.getElementById('amt4').value);
var attention=parseInt(document.getElementById('attention').value);
var acute=parseInt(document.getElementById('acute').value);
var total=alertness+amt4+attention+acute;
var resultDiv=document.getElementById('4at-result');
var scoreValue=document.getElementById('4at-score-value');
var interpretation=document.getElementById('4at-interpretation');
resultDiv.style.display='block';
scoreValue.textContent=total;
if(total>=4){
resultDiv.classList.add('positive');
interpretation.textContent='Score ≥4: Possible delirium ± cognitive impairment. Clinical assessment and workup indicated.';
}else if(total>=1){
resultDiv.classList.remove('positive');
interpretation.textContent='Score 1-3: Possible cognitive impairment. Delirium less likely but not excluded. Monitor closely.';
}else{
resultDiv.classList.remove('positive');
interpretation.textContent='Score 0: Delirium or severe cognitive impairment unlikely. Consider alternative diagnoses.';
}
}

function resetAll(){
if(confirm('Reset all fields? This cannot be undone.')){
var checkboxes=document.querySelectorAll('input[type="checkbox"]');
checkboxes.forEach(function(cb){cb.checked=false;});
var selects=document.querySelectorAll('select');
selects.forEach(function(sel){sel.selectedIndex=0;});
document.getElementById('cam-result').style.display='none';
document.getElementById('4at-result').style.display='none';
var sections=document.querySelectorAll('.section-body');
sections.forEach(function(section){section.classList.remove('active');});
var toggles=document.querySelectorAll('.toggle');
toggles.forEach(function(toggle){toggle.textContent='+';});
}
}
</script>

</body>
</html>
