    <script>
        function toggleHelp(id) {
            const helpText = document.getElementById(id);
            helpText.classList.toggle('show');
        }

        function toggleCheckbox(element) {
            const checkbox = element.querySelector('input[type="checkbox"]');
            checkbox.checked = !checkbox.checked;
            updateSummary();
        }

        function checkEscalation() {
            const escalationChecks = document.querySelectorAll('.escalation-check');
            const alertBox = document.getElementById('escalation-alert');
            let anyChecked = false;
            
            escalationChecks.forEach(check => {
                if (check.checked) anyChecked = true;
            });
            
            if (anyChecked) {
                alertBox.classList.add('show');
            } else {
                alertBox.classList.remove('show');
            }
        }

        function updateSummary() {
            const summaryContent = document.getElementById('summary-content');
            let summaryText = '';
            
            // Check CAM-ICU
            const camPositive = document.getElementById('cam-positive').checked;
            if (camPositive) {
                summaryText += '<div class="summary-item"><strong>Delirium confirmed by CAM-ICU</strong></div>';
            }
            
            // Check 4AT
            const fourATScore = document.getElementById('4at-score').value;
            if (fourATScore) {
                const score = parseInt(fourATScore);
                if (score >= 4) {
                    summaryText += '<div class="summary-item"><strong>4AT score ' + score + ': Delirium likely</strong></div>';
                } else if (score >= 1) {
                    summaryText += '<div class="summary-item">4AT score ' + score + ': Possible cognitive impairment</div>';
                } else {
                    summaryText += '<div class="summary-item">4AT score ' + score + ': Delirium unlikely</div>';
                }
            }
            
            // Workup completion
            const metabolicDone = document.getElementById('metabolic-done').checked;
            const medReview = document.getElementById('med-review').checked;
            
            if (metabolicDone || medReview) {
                summaryText += '<div class="summary-item">Workup initiated for reversible causes</div>';
            }
            
            // Interventions
            const medsHeld = document.getElementById('meds-held').checked;
            const reorientation = document.getElementById('reorientation').checked;
            const sleep = document.getElementById('sleep').checked;
            const mobilize = document.getElementById('mobilize').checked;
            
            if (medsHeld) {
                summaryText += '<div class="summary-item">Deliriogenic medications discontinued</div>';
            }
            
            if (reorientation || sleep || mobilize) {
                summaryText += '<div class="summary-item">Non-pharmacologic interventions implemented (first-line)</div>';
            }
            
            const pharmGiven = document.getElementById('pharm-given').checked;
            if (pharmGiven) {
                summaryText += '<div class="summary-item">Pharmacologic intervention documented</div>';
            }
            
            // Escalation check
            checkEscalation();
            
            if (summaryText === '') {
                summaryText = '<div class="summary-item">Complete the assessment above to generate summary</div>';
            }
            
            summaryContent.innerHTML = summaryText;
        }

        function toggleReferences() {
            const refContent = document.getElementById('ref-content');
            refContent.classList.toggle('expanded');
        }

        function resetForm() {
            if (confirm('Reset all fields? This cannot be undone.')) {
                document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
                document.querySelectorAll('input[type="number"]').forEach(input => input.value = '');
                document.querySelectorAll('.help-text').forEach(help => help.classList.remove('show'));
                document.getElementById('escalation-alert').classList.remove('show');
                updateSummary();
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Add event listeners to all checkboxes
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                cb.addEventListener('change', updateSummary);
            });
            
            updateSummary();
        });
    </script>
</body>
</html>
